{
  "compilerOptions": {
    /* Basic Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* strictness */
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    /* Bundler mode */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "src",
    "tests",
    "demo"
  ]
}